# --------------------------------------------------------
# ğŸŒ AppInit (pnpm) Configuration
# --------------------------------------------------------

# Default npm registry
registry=https://registry.npmjs.org/

# Default scope for your organization
scope=@appinit

# Make all scoped packages public (default for open source)
access=public

# Always authenticate when publishing (for CI/CD)
always-auth=true

# Use pnpmâ€™s workspace linking system
link-workspace-packages=true

# Save exact versions instead of ranges (^ or ~)
save-exact=true

# Do not auto-install peer dependencies
auto-install-peers=false

# Enforce Node engine versions (from package.json)
engine-strict=true

# Use pnpmâ€™s efficient content-addressable store
store-dir=~/.pnpm-store

# Prevent accidental root publishing
private=true

# The branch allowed to publish (optional, good for CI)
publish-branch=main

# Ensure consistent package manager version
package-manager=pnpm@9.10.0
