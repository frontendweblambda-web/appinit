{
	"name": "@appinit/github",
	"version": "0.1.0",
	"description": "GitHub API utilities and integrations for Appinit OS.",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "node ../../scripts/clean-dist.mjs dist",
		"prebuild": "pnpm clean",
		"build": "tsup src/index.ts --format=esm --dts --clean",
		"dev": "tsup src/index.ts --format esm --dts --watch",
		"start": "node dist/index.js"
	},
	"dependencies": {
		"@appinit/types": "workspace:*",
		"@appinit/utils": "workspace:*",
		"@octokit/rest": "^22.0.1",
		"@octokit/auth-oauth-device": "^8.0.3",
		"@octokit/request": "^8.1.2",
		"fs-extra": "^11.3.2"
	},
	"devDependencies": {
		"typescript": "^5.9.3",
		"@types/node": "^20.11.30",
		"vitest": "^1.3.0",
		"rimraf": "^6.1.0"
	},
	"publishConfig": {
		"access": "restricted"
	},
	"engines": {
		"node": ">=20.11.0"
	},
	"author": {
		"name": "Pradeep Kumar",
		"url": "https://github.com/frontendweblambda-web/appinit"
	}
}
