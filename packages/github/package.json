{
	"name": "@appinit/github",
	"version": "0.1.0",
	"description": "GitHub API utilities and integrations for Appinit OS.",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "npx rimraf dist",
		"prebuild": "pnpm clean",
