		"@octokit/request": "^8.1.2",
		"node-fetch": "^3.3.2",
		"fs-extra": "^11.3.2"
	},
	"devDependencies": {
		"typescript": "^5.9.3",
		"@types/node": "^20.11.30",
		"vitest": "^1.3.0",
		"rimraf": "^6.1.0"
	},
	"engines": {
		"node": ">=18"
	}
