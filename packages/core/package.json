{
	"name": "@appinit/core",
	"version": "1.0.0",
	"description": "AppInit OS core runtime: environment, UX mode, theme system, header & common platform logic.",
	"private": false,
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"keywords": [
		"appinit",
		"developer-os",
		"cli-engine",
		"scaffolding-runtime",
		"monorepo",
		"typescript",
		"platform-core"
	],
	"scripts": {
		"clean": "node ../../scripts/clean-dist.mjs dist",
		"prebuild": "pnpm clean",
		"build": "tsup src/index.ts --format esm --dts --clean",
		"dev": "tsup src/index.ts --format esm --dts --watch",
		"test": "vitest"
	},
	"dependencies": {
		"@appinit/types": "workspace:*",
		"@appinit/utils": "workspace:*",
		"kleur": "latest",
		"log-symbols": "latest"
	},
	"devDependencies": {
		"tsup": "latest",
		"typescript": "latest",
		"vitest": "latest",
		"fs-extra": "^11.3.2"
	},
	"publishConfig": {
		"access": "restricted"
	},
	"engines": {
		"node": ">=20.11.0"
	},
	"author": {
		"name": "Pradeep Kumar",
		"url": "https://github.com/frontendweblambda-web/appinit"
	}
}
