{
	"name": "@appinit/template-resolver",
	"version": "0.1.0",
	"description": "Unified template resolver for Appinit OS (local, GitHub, URL, npm, marketplace).",
	"private": true,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "node ../../scripts/clean-dist.mjs dist",
		"prebuild": "pnpm clean",
		"build": "tsup src/index.ts --format esm,cjs --dts --clean",
		"dev": "tsup src/index.ts --format esm,cjs --dts --watch --onSuccess \"echo [template-resolver rebuilt]\"",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"test": "vitest"
	},
	"dependencies": {
		"@appinit/types": "workspace:*",
		"@appinit/utils": "workspace:*",
		"fs-extra": "^11.3.2",
		"node-fetch": "^3.3.2",
		"tar": "^6.1.11",
		"adm-zip": "^0.5.10"
	},
	"devDependencies": {
		"typescript": "^5.9.3",
		"vitest": "^1.0.0",
		"@types/node": "^20.11.30",
		"tsup": "latest",
		"glob": "latest"
	},
	"engines": {
		"node": ">=18"
	}
}
