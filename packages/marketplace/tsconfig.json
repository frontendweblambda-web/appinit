{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",

		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"declaration": true,
		"declarationMap": false,

		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},

	"include": ["src"]
}
