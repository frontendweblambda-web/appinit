{
	"extends": "../../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"noEmit": false,
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
