{
  "name": "react",
  "version": "1.0.0",

  "base": "base",

  "variables": ["projectName", "description"],

  "modules": {
    "auth": {
      "path": "auth",
      "dependsOn": ["base"]
    },
    "backend": {
      "path": "backend",
      "dependsOn": ["base"]
    },
    "ui:tailwind": {
      "path": "ui/tailwind",
      "dependsOn": ["base"]
    },
    "ui:mui": {
      "path": "ui/mui",
      "dependsOn": ["base"]
    },
    "ci": {
      "path": "ci"
    },
    "deploy": {
      "path": "deploy"
    }
  },

  "presets": {
    "starter": {
      "modules": ["base", "ui:tailwind"]
    },
    "enterprise": {
      "modules": [
        "base",
        "auth",
        "backend",
        "ui:mui",
        "ci",
        "deploy"
      ]
    }
  }
}
