{
	"name": "@appinit/git-tools",
	"version": "0.1.0",
	"description": "Low-level Git power tools for Appinit OS (reset, history, diff, stash, branches).",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "npx rimraf dist",
		"prebuild": "pnpm clean",
		"build": "tsc -p tsconfig.json",
		"dev": "tsc -w -p tsconfig.json",
		"test": "vitest"
	},
	"dependencies": {
		"@appinit/types": "workspace:*",
		"@appinit/utils": "workspace:*",
		"simple-git": "^3.30.0",
		"fs-extra": "^11.3.2"
	},
	"devDependencies": {
		"typescript": "^5.9.3",
		"@types/node": "^20.11.30",
		"vitest": "^1.3.0",
		"rimraf": "^6.1.0"
	},
	"engines": {
		"node": ">=18"
	}
}
