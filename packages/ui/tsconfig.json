{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false, // Set to false so 'tsc' generates output files
    "module": "NodeNext", // Use NodeNext/ESNext for modern Node.js CLI projects
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}