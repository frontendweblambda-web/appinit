{
	"name": "@appinit/cleanup",
	"version": "0.1.0",
	"description": "Temporary file cleanup helpers for Appinit engine & CLI.",
	"private": true,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "node ../../scripts/clean-dist.mjs dist",
		"prebuild": "pnpm clean",
		"build": "tsup src/index.ts --format=esm --dts --clean",
		"dev": "tsup src/index.ts --format esm --dts --watch",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"test": "vitest"
	},
	"dependencies": {
		"fs-extra": "^11.3.2",
		"@appinit/types": "workspace:*",
		"@appinit/utils": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.9.3",
		"@types/node": "^20.11.30",
		"vitest": "^1.3.0",
		"tsup": "latest"
	},
	"engines": {
		"node": ">=18"
	}
}
