{
	"name": "@appinit/cleanup",
	"version": "0.1.0",
	"description": "Temporary file cleanup helpers for Appinit engine & CLI.",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"clean": "npx rimraf dist",
		"prebuild": "pnpm clean",
		"build": "tsc -p tsconfig.json",
		"dev": "tsc -w -p tsconfig.json",
		"test": "vitest"
	},
	"dependencies": {
		"fs-extra": "^11.3.2",
		"@appinit/types": "workspace:*",
		"@appinit/utils": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.9.3",
		"@types/node": "^20.11.30",
		"vitest": "^1.3.0",
		"rimraf": "^6.1.0"
	},
	"engines": {
		"node": ">=18"
	}
}
