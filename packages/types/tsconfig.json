{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",

		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": false,

		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2022",

		"allowJs": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src"]
}
