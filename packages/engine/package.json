{
	"name": "@appinit/engine",
	"version": "1.0.0",
	"description": "Core scaffolding and configuration engine for the AppInit ecosystem.",
	"private": false,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "node ../../scripts/clean-dist.mjs dist",
		"prebuild": "pnpm clean",
		"build": "tsup src/index.ts --format esm,cjs --dts --clean",
		"dev": "tsup src/index.ts --format esm,cjs --dts --watch",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"test": "vitest"
	},
	"dependencies": {
		"@appinit/types": "workspace:*",
		"chalk": "^5.6.2",
		"deepmerge": "^4.3.1",
		"execa": "^9.6.0",
		"fs-extra": "^11.3.2",
		"ora": "^9.0.0",
		"path": "0.12.7",
		"which": "^6.0.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"tsup": "latest",
		"typescript": "^5.9.3",
		"@types/node": "^20.11.30",
		"vitest": "^1.0.0"
	},
	"keywords": [
		"scaffold",
		"engine",
		"generator",
		"appinit",
		"typescript"
	],
	"author": "frontendweb-sg",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	}
}
