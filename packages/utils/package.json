{
	"name": "@appinit/utils",
	"version": "1.0.0",
	"description": "Shared utility helpers for Appinit OS.",
	"private": false,
	"type": "module",
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "node ../../scripts/clean-dist.mjs dist",
		"prebuild": "pnpm clean",
		"build": "tsup src/index.ts --format esm,cjs --dts --clean",
		"dev": "tsup src/index.ts --format esm,cjs --dts --watch",
		"test": "vitest"
	},
	"dependencies": {
		"fs-extra": "latest"
	},
	"devDependencies": {
		"deepmerge": "latest",
		"tsup": "latest",
		"typescript": "latest",
		"vitest": "latest"
	},
	"engines": {
		"node": ">=18"
	},
	"author": "frontendweb-sg",
	"license": "MIT"
}
