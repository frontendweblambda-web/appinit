# .nvmrc
20.11.0 # Or whatever stable LTS version you choose

echo "# Stop npm from being used as the installer.
# The following was added to package.json
# { \"engines\": { \"npm\": \"Use pnpm instead of npm.\" } }

# Force pnpm usage and ensure consistency
engine-strict=true

# Allow installing dev tools (like prettier, eslint) in workspace root
ignore-workspace-root-check=true

# Optional: speed up installs
strict-peer-dependencies=false
auto-install-peers=true