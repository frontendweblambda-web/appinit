# ðŸš« Prevent developers from accidentally using npm or yarn
engine-strict=true

# Allow workspace-level scripts (prettier, eslint, etc.)
ignore-workspace-root-check=true

# Speed up install & ensure reproducibility
shared-workspace-lockfile=true
link-workspace-packages=true

# Avoid "peer dep missing" errors (pnpm will auto install them)
auto-install-peers=true
strict-peer-dependencies=false

# Optional â€” ensure all workspace packages share a single lockfile
save-workspace-protocol=true

# Optional â€” cleaner output
reporter=silent
