{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2022", "DOM"],
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"types": ["node"],
		"paths": {
			"@forge/*": ["packages/*/"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "src/templates"]
}

