{
	"compilerOptions": {
		// Output behavior for TS typechecking (tsup handles actual build)
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		// Environment support: Node + browser
		"lib": ["ES2022", "DOM"],
		"types": ["node"],

		// For UI packages (React)
		"jsx": "react-jsx",

		// Safety & correctness
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,

		// Monorepo path aliasing
		"baseUrl": ".",
		"paths": {
			"@appinit/*": ["packages/*/src"]
		}
	}
}
